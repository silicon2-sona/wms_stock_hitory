{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 현재 파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "Python: main.py (스케줄러)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "Python: main.py export (DB 데이터 생성)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["export"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "Python: 일일 재고 분석기",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/analyzer/daily_stock_accuracy_analyzer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        }
    ]
}
